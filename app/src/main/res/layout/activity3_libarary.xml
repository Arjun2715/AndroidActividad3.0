<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_6641316"
    tools:context=".Activity3Library">

    <TextView
        android:id="@+id/Act1readingNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/library"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:textSize="20sp"
        android:background="#45FFFFFF"
        android:padding="20dp"

        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Act1readingNow"
        android:layout_above="@id/menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--non_fiction_books books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/non_fiction_books"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:src="@drawable/a15"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/a2" />

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a3" />


                </LinearLayout>
            </HorizontalScrollView>

            <!--fiction_books books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/sci_fiction_books"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a6" />

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a9" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a11" />
                </LinearLayout>
            </HorizontalScrollView>


            <!--lifestyle books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/lifestyle"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:src="@drawable/a12"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a13" />

                    <ImageView
                        android:id="@+id/img9"
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a14" />
                </LinearLayout>
            </HorizontalScrollView>

            <!--Mystery books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/mystery"
                android:textSize="20sp"
                android:textStyle="bold" />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a16" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a17" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a18" />
                </LinearLayout>
            </HorizontalScrollView>

            <!--Mystery books scroll -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:text="@string/cyberpunk"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="161dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a19" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a20" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="210dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/a22" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
    <!--bottom menu buttons -->
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Reading_Now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:drawableTop="@drawable/ic_baseline_chrome_reader_mode_24"
            android:maxWidth="100dp"
            android:text="@string/reading_now"
            android:textSize="12sp" />
        <Button
            android:id="@+id/Libarary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:drawableTop="@drawable/ic_baseline_library_books_24"
            android:maxWidth="100dp"
            android:text="@string/libarary"
            android:textSize="12sp"
            tools:ignore="SmallSp" />
        <Button
            android:id="@+id/Book_Store"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:drawableTop="@drawable/ic_baseline_local_grocery_store_24"
            android:maxWidth="100dp"
            android:text="@string/shop"
            android:textSize="12sp" />
        <Button
            android:id="@+id/Audio_Books"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:drawableTop="@drawable/ic_baseline_headphones_24"
            android:maxWidth="100dp"
            android:text="@string/audio_books"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>