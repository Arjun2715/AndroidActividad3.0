<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_6641316"
    tools:context=".Activity3Library">

    <TextView
        android:id="@+id/Act1readingNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#45FFFFFF"
        android:padding="20dp"
        android:text="Book Store"
        android:textColor="#5D4037"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu"
        android:layout_below="@id/Act1readingNow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D1D1D1"
                android:textSize="30dp"
                android:text="Discounts"
                android:paddingBottom="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a15" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="48 Laws of power"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                   <TextView
                        android:layout_width="wrap_content"
                        android:padding="16dp"
                        android:layout_height="145dp"
                        android:text="Robert Greene is the author of the New York Times bestsellers The 48 Laws of Power, The Art of Seduction, The 33 Strategies of War, and The 50th Law."
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/lawpowerbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#3F51B5"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="25dp"
                        android:text="Amazon $14.30"
                        android:textColor="#455A64"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Good Strategy\n Bad Strategy"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:text="You do need a perspective, but strategy is about creating a favourable outcome in the future by applying focus, allocate resources and most import the actions."
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/thinkingstratbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginBottom="10dp"
                        android:background="#F2C75B"
                        android:minHeight="48dp"
                        android:text="Amazon $13.90"
                        android:textColor="#455A64"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Thinking Strategically"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:padding="7dp"
                        android:text="Thinking Strategically is a rational approach to decision making that can reduce the stress and anxiety of uncertainty and will give you better control in life."
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/goodstratbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="25dp"
                        android:background="#F2C75B"
                        android:text="Amazon $10.40"
                        android:textColor="#455A64"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a6" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="DUNE"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:padding="7dp"
                        android:text="Dune is a 1965 epic science fiction novel by American author Frank Herbert, originally published as two separate serials in Analog magazine."
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/dunebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="25dp"
                        android:background="#F2C75B"
                        android:text="Amazon $19.99"
                        android:textColor="#455A64"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="STOLEN"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:padding="7dp"
                        android:text="This is my story. A letter from nowhere. Sixteen-year-old Gemma is kidnapped from Bangkok airport and taken to the Australian Outback. This wild and desolate "
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/stolenbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="25dp"
                        android:background="#F2C75B"
                        android:text="Amazon $19.99"
                        android:textColor="#455A64"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Reading_Now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:drawableTop="@drawable/ic_baseline_chrome_reader_mode_24"
            android:maxWidth="100dp"
            android:text="@string/reading_now"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Libarary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:drawableTop="@drawable/ic_baseline_library_books_24"
            android:maxWidth="100dp"
            android:text="@string/libarary"
            android:textSize="12sp"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/Book_Store"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:drawableTop="@drawable/ic_baseline_local_grocery_store_24"
            android:maxWidth="100dp"
            android:text="@string/shop"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Audio_Books"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:drawableTop="@drawable/ic_baseline_headphones_24"
            android:maxWidth="100dp"
            android:text="@string/audio_books"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>
</RelativeLayout>